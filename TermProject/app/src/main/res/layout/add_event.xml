<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"
        android:layout_marginTop="105dp"
        android:id="@+id/add_event_editText"
        android:hint="Name" />

    <TextView
        android:text="이벤트 이름 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_event_editText"
        android:layout_alignBottom="@+id/add_event_editText"
        android:layout_toStartOf="@+id/add_event_editText"
        android:layout_marginEnd="37dp"
        android:textSize="16sp" />

    <Button
        android:text="완료"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="39dp"
        android:id="@+id/add_complete"
        android:textSize="24sp" />

    <TextView
        android:text="이벤트 추가"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:id="@+id/add_event_textView" />
</RelativeLayout>