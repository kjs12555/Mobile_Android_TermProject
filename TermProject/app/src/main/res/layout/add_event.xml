<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:background="@android:color/background_light">

    <TextView
        android:text="이벤트 이름 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/add_event_editText"
        android:layout_alignBottom="@+id/add_event_editText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="35dp"
        android:id="@+id/add_event_editText"
        android:hint="Name"
        android:layout_below="@+id/add_event_textView"
        android:layout_alignStart="@+id/add_event_textView"
        android:layout_marginStart="16dp" />

    <Button
        android:text="완료"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_complete"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/add_event_editText" />

    <TextView
        android:text="이벤트 추가"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="11dp"
        android:id="@+id/add_event_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif" />
</RelativeLayout>